  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_marginLeft="10sp"
      android:layout_marginRight="10sp"
      android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/id_picture"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          android:contentDescription="@string/app_name"/>
      <TextView
          android:id="@+id/id_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="#000000"
          android:textSize="16sp" />

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/id_label"
              android:layout_width="0dip"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:layout_marginTop="10px"
              android:layout_weight="2"
              android:textSize="12sp" />
          <TextView
              android:id="@+id/id_chapter"
              android:layout_width="0dip"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:layout_marginTop="10px"
              android:layout_weight="3"
              android:textSize="12sp" />
          <TextView
              android:id="@+id/id_publicationdate"
              android:layout_width="0dip"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:layout_marginTop="10px"
              android:layout_weight="1"
              android:gravity="right"
              android:textSize="12sp" />
              </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2e56f5"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/id_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ef2424"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_vedio"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/id_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/id_learn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/id_stay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/id_readcount"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/id_maxlookdate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="10sp"/>
    </LinearLayout>
  </LinearLayout>

</android.support.v7.widget.CardView>